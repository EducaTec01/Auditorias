<h2 class="text-2xl font-bold text-gray-900">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-8" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-600" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 w-full border rounded" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-600" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 p-2 w-full border rounded" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "text-sm text-gray-600" %>
    </div>
  <% end %>

  <div class="flex items-center">
    <%= f.submit "Log in", class: "bg-blue-500 text-white p-2 rounded" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>